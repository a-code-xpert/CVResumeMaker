<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/background_cv_list_item">

    <ImageView
        android:id="@+id/prof_img"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:src="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/prof_img"
        android:text="My Sample Title"
        android:textSize="10pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date_created"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/prof_img"
        android:text="Date: 01-01-1991"
        android:textSize="9pt"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_update_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_created"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/prof_img"
        android:background="@drawable/button"
        android:text="@string/update_cv"
        android:textSize="9pt"
        android:textStyle="bold" />

</RelativeLayout>